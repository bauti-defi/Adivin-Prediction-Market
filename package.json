{
  "name": "fifa-prediction-market",
  "version": "1.0.0",
  "description": "An EVM based prediction market for the 2022 FIFA World Cup. ",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "devDependencies": {
    "cz-conventional-changelog": "3.3.0",
    "husky": "^8.0.1"
  },
  "scripts": {
    "fmt": "forge fmt",
    "prepare": "husky install",
    "build": "forge build",
    "test": "forge test -vvv",
    "test:coverage": "forge coverage",
    "test:watch": "forge test -vvv --watch",
    "flatten": "mkdir -p flattened && forge flatten --output flattened/Factory.flattened.sol src/Factory.sol",
    "flatten:escrow": "mkdir -p flattened && forge flatten --output flattened/Escrow.flattened.sol src/Escrow.sol"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bauti-defi/FIFA-Prediction-Market.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "market"
  ],
  "author": "bauti.eth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bauti-defi/FIFA-Prediction-Market/issues"
  },
  "homepage": "https://github.com/bauti-defi/FIFA-Prediction-Market#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "solc": "^0.8.17"
  }
}
